<div class="container">
  <div class="row">
    <div class="col-md-6">
    <% @questions.each do |question| %>
      <h4 class="question_content"><%= link_to "#{question.content}",  alone_path(question)%></h4>
      <% question.validate_answers.each do |answer| %>
      <h4 class="answer_content"><%= raw answer.content %></h4>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
